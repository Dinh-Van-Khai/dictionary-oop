<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="container" prefHeight="518.0" prefWidth="865.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controller.dictionary.AddWordController">
    <children>
        <Button fx:id="backBtn" contentDisplay="GRAPHIC_ONLY" layoutX="720.0" mnemonicParsing="false" onAction="#handleClickedBackButton" prefHeight="71.0" prefWidth="70.0" text="Back">
            <graphic>
                <ImageView fitHeight="62.0" fitWidth="54.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../img/dictionary/back-icon.png" />
                    </image>
                </ImageView>
            </graphic>
         <tooltip>
            <Tooltip text="Back">
               <font>
                  <Font size="14.0" />
               </font>
            </Tooltip>
         </tooltip>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
        </Button>
        <Label prefHeight="71.0" prefWidth="719.0" text="Add new word">
            <graphic>
                <ImageView fitHeight="71.0" fitWidth="92.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../img/dictionary/dictionary.png" />
                    </image>
                </ImageView>
            </graphic>
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>

        <AnchorPane layoutY="69.0" prefHeight="450.0" prefWidth="865.0">
            <children>
                <TextField fx:id="wordTargetInput" layoutX="24.0" layoutY="119.0" prefHeight="56.0" prefWidth="692.0" promptText="English word" />
                <TextArea fx:id="wordExplainInput" layoutX="24.0" layoutY="176.0" prefHeight="258.0" prefWidth="692.0" promptText="Explain" />
                <Button fx:id="addWordButton" layoutX="760.0" layoutY="377.0" mnemonicParsing="false" text="Add word" />
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
