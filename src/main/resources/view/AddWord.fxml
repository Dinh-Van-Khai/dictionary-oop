<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="container" prefHeight="760.0" prefWidth="1265.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controller.dictionary.AddWordController">
    <children>
        <Label layoutX="15.0" layoutY="14.0" prefHeight="94.0" prefWidth="1235.0" styleClass="scene-label" text="  Add new word" textFill="#1d8096">
         <graphic>
            <ImageView fitHeight="80.0" fitWidth="89.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../img/dictionary/dictionary.png" />
               </image>
            </ImageView>
         </graphic>
         <font>
            <Font name="System Bold" size="64.0" />
         </font>
      </Label>
      <Button fx:id="backBtn" contentDisplay="GRAPHIC_ONLY" layoutX="1177.0" layoutY="25.0" mnemonicParsing="false" onAction="#handleClickedBackButton" prefHeight="71.0" prefWidth="70.0" text="Button">
         <tooltip>
            <Tooltip text="Back">
               <font>
                  <Font size="14.0" />
               </font>
            </Tooltip>
         </tooltip>
         <graphic>
            <ImageView fitHeight="73.0" fitWidth="53.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../img/dictionary/back-icon.png" />
               </image>
            </ImageView>
         </graphic>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
        <AnchorPane layoutX="15.0" layoutY="108.0" prefHeight="634.0" prefWidth="1235.0">
            <children>
                <TextField fx:id="wordTargetInput" layoutX="-1.0" layoutY="119.0" prefHeight="56.0" prefWidth="1235.0" promptText="English word">
               <font>
                  <Font size="24.0" />
               </font></TextField>
                <TextArea fx:id="wordExplainInput" layoutX="-1.0" layoutY="175.0" prefHeight="338.0" prefWidth="1235.0" promptText="Explain">
               <font>
                  <Font size="18.0" />
               </font></TextArea>
                <Button fx:id="addWordButton" layoutX="538.0" layoutY="548.0" mnemonicParsing="false" prefHeight="71.0" prefWidth="160.0" styleClass="button-with-background" text="Add word">
               <font>
                  <Font size="18.0" />
               </font></Button>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
