<AnchorPane prefHeight="473.0" prefWidth="778.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controller.dictionary.DictionaryController">
   <children>
      <Button fx:id="addWordBtn" contentDisplay="GRAPHIC_ONLY" layoutX="720.0" mnemonicParsing="false" onAction="#handleClickedAddWordButton" prefHeight="71.0" prefWidth="70.0" text="Button">
