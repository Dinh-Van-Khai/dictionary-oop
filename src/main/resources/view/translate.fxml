                     </font></TextArea>
                  <Button fx:id="soundTextTo" layoutX="14.0" layoutY="458.0" mnemonicParsing="false" prefHeight="44.0" prefWidth="59.0">
                     <graphic>
                        <ImageView fitHeight="43.0" fitWidth="43.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../img/translate/speaker.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
               </children>
            </Pane>
            <Button fx:id="translateBtn" layoutX="538.0" layoutY="548.0" mnemonicParsing="false" prefHeight="71.0" prefWidth="160.0" text="Translate">
               <font>
                  <Font size="18.0" />
               </font></Button>
         </children></Pane>
   </children>
