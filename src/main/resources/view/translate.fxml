                  <Image url="@../img/translate/translate-icon.png" />
               </image>
            </ImageView>
         </graphic>
         <font>
            <Font name="System Bold" size="64.0" />
         </font>
      </Label>
      <Pane layoutX="13.0" layoutY="121.0" prefHeight="624.0" prefWidth="1235.0">
         <children>
            <Pane layoutX="3.0" prefHeight="523.0" prefWidth="616.0">
               <children>
                  <ComboBox fx:id="langFrom" prefHeight="44.0" prefWidth="616.0" />
                  <TextArea fx:id="textFrom" layoutY="45.0" prefHeight="413.0" prefWidth="616.0" promptText="Text to be translated">
                     <font>
                        <Font size="24.0" />
                     </font></TextArea>
                  <Button fx:id="soundTextFrom" layoutX="14.0" layoutY="458.0" mnemonicParsing="false" prefHeight="44.0" prefWidth="44.0">
                     <graphic>
                        <ImageView fitHeight="43.0" fitWidth="46.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../img/translate/speaker.png" />
